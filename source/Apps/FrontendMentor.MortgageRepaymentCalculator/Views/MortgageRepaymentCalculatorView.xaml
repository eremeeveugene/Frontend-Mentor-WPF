<UserControl x:Class="FrontendMentor.MortgageRepaymentCalculator.Views.MortgageRepaymentCalculatorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:ClassModifier="internal"
             mc:Ignorable="d">

    <Border MaxWidth="1008"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            CornerRadius="24">
        <Border.Background>
            <SolidColorBrush Color="{StaticResource White.Color}" />
        </Border.Background>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="40">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Style="{StaticResource TextPreset2.TextBlock.Style}"
                               Text="Mortgage Calculator" />

                    <TextBlock Grid.Column="1"
                               Width="62"
                               Margin="120,0,0,0"
                               Text="Clear All" />
                </Grid>

                <TextBlock Margin="0,40,0,0"
                           Style="{StaticResource TextPreset4.TextBlock.Style}"
                           Text="Mortgage Amount" />

                <TextBox Height="48" Margin="0,12,0,0" />

                <Grid Margin="0,24,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Style="{StaticResource TextPreset4.TextBlock.Style}" Text="Mortgage Term" />

                        <TextBox Height="48" Margin="0,12,0,0" />

                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Style="{StaticResource TextPreset4.TextBlock.Style}" Text="Interest Rate" />

                        <TextBox Height="48" Margin="0,12,0,0" />

                    </StackPanel>
                </Grid>

                <TextBlock Margin="0,24,0,0"
                           Style="{StaticResource TextPreset4.TextBlock.Style}"
                           Text="Mortgage Type" />

                <TextBlock Height="48"
                           Margin="0,12,0,0"
                           Text="Repayment" />

                <TextBlock Height="48"
                           Margin="0,12,0,0"
                           Text="Interest Only" />

                <Button Height="56"
                        Margin="0,40,0,0"
                        Content="Calculate Repayments" />
            </StackPanel>

            <Border Grid.Column="1"
                    Padding="40"
                    CornerRadius="0 24 24 80">
                <Border.Background>
                    <SolidColorBrush Color="{StaticResource Slate.900.Color}" />
                </Border.Background>

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image Source="{StaticResource MortgageResults.Image}" Stretch="None" />

                    <TextBlock Margin="0,16,0,0"
                               Style="{StaticResource TextPreset2.TextBlock.Style}"
                               Text="Results shown here"
                               TextAlignment="Center">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{StaticResource White.Color}" />
                        </TextBlock.Foreground>
                    </TextBlock>

                    <TextBlock Margin="0,16,0,0"
                               Style="{StaticResource TextPreset4.TextBlock.Style}"
                               Text="Complete the form and click “calculate repayments” to see what your monthly repayments would be."
                               TextAlignment="Center"
                               TextWrapping="Wrap">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{StaticResource Slate.300.Color}" />
                        </TextBlock.Foreground>
                    </TextBlock>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

</UserControl>
