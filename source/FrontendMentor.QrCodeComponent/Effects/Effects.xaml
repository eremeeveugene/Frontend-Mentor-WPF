<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:resourceDictionaries="clr-namespace:FrontendMentor.Assets.ResourceDictionaries;assembly=FrontendMentor.Assets">

    <ResourceDictionary.MergedDictionaries>
        <resourceDictionaries:SharedResourceDictionary Source="pack://application:,,,/FrontendMentor.QrCodeComponent;component/Colors/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <DropShadowEffect x:Key="QrCodeComponentWindowView.QrCodeOuterBorder.DropShadowEffect"
                      po:Freeze="True"
                      BlurRadius="25"
                      Direction="270"
                      Opacity="0.0477"
                      ShadowDepth="25"
                      Color="{StaticResource Black.Color}" />

</ResourceDictionary>