<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Heading.M.TextBlock.Style" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="Heading.L.TextBlock.Style"
           BasedOn="{StaticResource Heading.M.TextBlock.Style}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="32" />
    </Style>

    <Style x:Key="Heading.XL.TextBlock.Style"
           BasedOn="{StaticResource Heading.L.TextBlock.Style}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="72" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="LineHeight" Value="72" />
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
    </Style>

    <Style x:Key="Body.TextBlock.Style" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="Medium" />
    </Style>

    <Style x:Key="Body.Bold.TextBlock.Style"
           BasedOn="{StaticResource Body.TextBlock.Style}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

</ResourceDictionary>