<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="Body.S.Regular.TextBlock.Style" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="LineHeight" Value="21" />
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
    </Style>

    <Style x:Key="Body.S.Bold.TextBlock.Style"
           BasedOn="{StaticResource Body.S.Regular.TextBlock.Style}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontWeight" Value="ExtraBold" />
    </Style>

    <Style x:Key="Body.M.TextBlock.Style"
           BasedOn="{StaticResource Body.S.Regular.TextBlock.Style}"
           TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="LineHeight" Value="24" />
    </Style>

    <Style x:Key="Heading.TextBlock.Style" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="LineHeight" Value="36" />
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
    </Style>

</ResourceDictionary>