<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:resourceDictionaries="clr-namespace:FrontendMentor.Assets.ResourceDictionaries;assembly=FrontendMentor.Assets">

    <ResourceDictionary.MergedDictionaries>
        <resourceDictionaries:SharedResourceDictionary Source="pack://application:,,,/FrontendMentor.BlogPreviewCard;component/Colors/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--#region BlogPreviewCardWindow-->

    <SolidColorBrush x:Key="BlogPreviewCardWindow.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Black.Color}" />

    <SolidColorBrush x:Key="BlogPreviewCardWindow.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Yellow.Color}" />

    <!--#endregion-->

    <!--#region BlogPreviewCard-->

    <SolidColorBrush x:Key="BlogPreviewCard.Border.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Black.Color}" />

    <SolidColorBrush x:Key="BlogPreviewCard.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource PureWhite.Color}" />

    <!--#endregion-->

    <!--#region BlogPreviewCard.CategoryBorder-->

    <SolidColorBrush x:Key="BlogPreviewCard.CategoryBorder.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Yellow.Color}" />

    <!--#endregion-->

    <!--#region BlogPreviewCard.BlogAuthorTextBlock-->

    <SolidColorBrush x:Key="BlogPreviewCard.AuthorTextBlock.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Grey.Color}" />

    <!--#endregion-->

</ResourceDictionary>