<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:constants="clr-namespace:FrontendMentor.Assets.Constants"
                    xmlns:panels="clr-namespace:FrontendMentor.Assets.Controls.Panels"
                    xmlns:regions="http://prismlibrary.com/"
                    xmlns:resourceDictionaries="clr-namespace:FrontendMentor.Assets.ResourceDictionaries"
                    xmlns:windows="clr-namespace:FrontendMentor.Assets.Controls.Windows">

    <ResourceDictionary.MergedDictionaries>
        <resourceDictionaries:SharedResourceDictionary Source="pack://application:,,,/FrontendMentor.Assets;component/Images/ImagesDictionary.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <WindowChrome x:Key="CustomWindowChrome"
                  CaptionHeight="40"
                  CornerRadius="0"
                  UseAeroCaptionButtons="False" />

    <ControlTemplate x:Key="FrontendMentorWindow.TitleBarButton.Template" TargetType="{x:Type Button}">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <ContentPresenter />
        </Border>
    </ControlTemplate>

    <Style x:Key="FrontendMentorWindow.TitleBarButton.Style" TargetType="{x:Type Button}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="#808080" />
        <Setter Property="OverridesDefaultStyle" Value="True" />
        <Setter Property="Template" Value="{StaticResource FrontendMentorWindow.TitleBarButton.Template}" />
        <Setter Property="Width" Value="{Binding ActualHeight, RelativeSource={RelativeSource Self}}" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#FF3C4043" />
                <Setter Property="Foreground" Value="#ffffff" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#4c4d4d" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="FrontendMentorWindow.TitleBarCloseButton.Style"
           BasedOn="{StaticResource FrontendMentorWindow.TitleBarButton.Style}"
           TargetType="{x:Type Button}">
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#d3362b" />
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#8b2d26" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <ControlTemplate x:Key="FrontendMentorWindow.Template" TargetType="{x:Type windows:FrontendMentorWindow}">
        <Border Padding="{TemplateBinding Padding}"
                Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Height="{TemplateBinding TitleBarHeight}"
                        Background="{TemplateBinding TitleBarBackground}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <panels:SpacingStackPanel Grid.Column="0"
                                                  Margin="10,0,0,0"
                                                  Orientation="Horizontal"
                                                  Spacing="10">

                            <Image Height="20" Source="{StaticResource FrontendMentor.Image}" />

                            <TextBlock VerticalAlignment="Center"
                                       FontFamily="Segoe UI"
                                       FontSize="12"
                                       Foreground="White"
                                       Text="{TemplateBinding Title}" />
                        </panels:SpacingStackPanel>

                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button Command="{Binding MinimizeCommand, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource FrontendMentorWindow.TitleBarButton.Style}">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Foreground="White"
                                           Text="&#xE921;" />
                            </Button>
                            <Button Command="{Binding ToggleMaximizeCommand, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource FrontendMentorWindow.TitleBarButton.Style}">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Foreground="White"
                                           Text="&#xE922;" />
                            </Button>
                            <Button Command="{Binding CloseCommand, RelativeSource={RelativeSource TemplatedParent}}" Style="{StaticResource FrontendMentorWindow.TitleBarCloseButton.Style}">
                                <TextBlock HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="12"
                                           Foreground="White"
                                           Text="&#xE8BB;" />
                            </Button>
                            <!--<Button Style="{StaticResource FrontendMentorWindow.TitleBarButton.Style}">
                                <icons:Icon Data="M3,12 L21,12 L21,14 L3,14 Z"
                                            Stroke="White"
                                            StrokeThickness="1" />
                            </Button>
                            <Button Style="{StaticResource FrontendMentorWindow.TitleBarButton.Style}">
                                <icons:Icon Data="M3,3 L21,3 L21,21 L3,21 Z M5,5 L5,19 L19,19 L19,5 Z"
                                            Stroke="White"
                                            StrokeThickness="1" />
                            -->
                            <!--<icons:Icon Data="M7,7 L17,7 L17,17 L7,17 Z M5,5 L5,15 L7,15 L7,19 L17,19 L17,17 L19,17 L19,7 L17,7 L17,5 Z" />-->
                            <!--
                            </Button>
                            <Button Style="{StaticResource FrontendMentorWindow.TitleBarButton.Style}">
                                <icons:Icon Data="M19,6.41 L17.59,5 L12,10.59 L6.41,5 L5,6.41 L10.59,12 L5,17.59 L6.41,19 L12,13.41 L17.59,19 L19,17.59 L13.41,12 Z"
                                            Stroke="White"
                                            StrokeThickness="1" />
                            </Button>-->
                        </StackPanel>
                    </Grid>
                </Border>

                <AdornerDecorator Grid.Row="1">
                    <ContentPresenter />
                </AdornerDecorator>
            </Grid>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type windows:FrontendMentorWindow}">
        <Setter Property="BorderBrush" Value="#2f2f2f" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Template" Value="{StaticResource FrontendMentorWindow.Template}" />
        <Setter Property="TitleBarBackground" Value="#2b2b2b" />
        <Setter Property="TitleBarHeight" Value="40" />
        <Setter Property="WindowChrome.WindowChrome" Value="{StaticResource CustomWindowChrome}" />
        <Setter Property="WindowState" Value="Maximized" />
        <Setter Property="regions:RegionManager.RegionName" Value="{x:Static constants:FrontedMentorRegionNames.Shell}" />
        <Style.Triggers>
            <Trigger Property="WindowState" Value="Maximized">
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Padding" Value="8" />
            </Trigger>
            <Trigger Property="IsActive" Value="True">
                <Setter Property="TitleBarBackground" Value="#1f2020" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>