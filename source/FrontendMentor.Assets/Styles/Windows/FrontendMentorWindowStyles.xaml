<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:windows="clr-namespace:FrontendMentor.Assets.Controls.Windows">

    <ControlTemplate x:Key="FrontendMentorWindowTemplate" TargetType="{x:Type windows:FrontendMentorWindow}">
        <Border Background="{TemplateBinding Background}"
                BorderBrush="{TemplateBinding BorderBrush}"
                BorderThickness="{TemplateBinding BorderThickness}">
            <AdornerDecorator>
                <ContentPresenter Content="{TemplateBinding SectorsContainer}" />
            </AdornerDecorator>
        </Border>
    </ControlTemplate>

    <Style TargetType="{x:Type windows:FrontendMentorWindow}">
        <Setter Property="Template" Value="{StaticResource FrontendMentorWindowTemplate}" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="WindowState" Value="Maximized" />
    </Style>

</ResourceDictionary>