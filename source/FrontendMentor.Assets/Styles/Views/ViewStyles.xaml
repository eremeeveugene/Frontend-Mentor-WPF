<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:FrontendMentor.Assets.Controls.Views">

    <ControlTemplate x:Key="ViewTemplate" TargetType="{x:Type views:View}">
        <ContentPresenter />
    </ControlTemplate>

    <Style TargetType="{x:Type views:View}">
        <Setter Property="Focusable" Value="False" />
        <Setter Property="Template" Value="{StaticResource ViewTemplate}" />
    </Style>

</ResourceDictionary>