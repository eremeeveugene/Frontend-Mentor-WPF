<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:resourceDictionaries="clr-namespace:FrontendMentor.Assets.ResourceDictionaries;assembly=FrontendMentor.Assets">

    <ResourceDictionary.MergedDictionaries>
        <resourceDictionaries:SharedResourceDictionary Source="pack://application:,,,/FrontendMentor.SocialLinksProfile;component/Colors/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="SocialLinksProfileWindowView.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource White.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileWindowView.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Black.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileWindowView.CardOuterBorder.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource DarkGrey.Color}" />

</ResourceDictionary>