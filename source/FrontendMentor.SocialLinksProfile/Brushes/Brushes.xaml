<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:resourceDictionaries="clr-namespace:FrontendMentor.Assets.ResourceDictionaries;assembly=FrontendMentor.Assets">

    <ResourceDictionary.MergedDictionaries>
        <resourceDictionaries:SharedResourceDictionary Source="pack://application:,,,/FrontendMentor.SocialLinksProfile;component/Colors/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--#region SocialLinksProfileWindow-->

    <SolidColorBrush x:Key="SocialLinksProfileWindow.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource White.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileWindow.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Black.Color}" />

    <!--#endregion-->

    <!--#region SocialLinksProfileView-->

    <SolidColorBrush x:Key="SocialLinksProfileView.CardOuterBorder.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource DarkGrey.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileView.LocationTextBlock.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource NeonGreen.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileView.SocialLinkButton.Background.Brush"
                     po:Freeze="True"
                     Color="{StaticResource Grey.Color}" />

    <SolidColorBrush x:Key="SocialLinksProfileView.SocialLinkButton.Foreground.Brush"
                     po:Freeze="True"
                     Color="{StaticResource White.Color}" />

    <!--#endregion-->

</ResourceDictionary>